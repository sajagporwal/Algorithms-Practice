
public class binary {
public static void main(String[] args)
{
	int a[]={2,3,4,5,6,7,8,9};
	int low=0;
	int high=7;
	binarys(a,low,high);
}
public static void binarys(int a[],int low,int high)
{
	int mid;
	while(low<=high)
	{
		mid=(low+high)/2;
		if(a[mid]==4)
		{
			System.out.print("Found at position "+(mid+1));
			return;
		}
		else if(4<a[mid])
		{
			binarys(a,low,mid-1);
		}
		else
		{
			binarys(a,mid+1,high);
		}
	}
}
}
